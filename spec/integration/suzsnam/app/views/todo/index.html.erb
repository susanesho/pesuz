<html>
  <head>
    <script src="https://code.getmdl.io/1.1.3/material.min.js"></script>
    <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.indigo-pink.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=material+Icons">
    <style>
    .mdl-button {
    text-transform: none !important;
    }
    .mdl-mini-footer {
    padding: 32px 16px;
    color: #fff;
    background-color: rgb(63,81,181);
    }
    a {
    color: rgb(255,255,255);
    font-weight: 500;
    text-decoration: none;
    }
    </style>
  </head>
  <body>
    <div class="mdl-layout mdl-js-layout">
      <header class="mdl-layout__header mdl-layout__header--scroll">
        <div class="mdl-layout__header-row">
          <span class="mdl-layout-title"><a href="/todo">Suzsnam</span></a>
          <div class="mdl-layout-spacer"></div>
        </div>
      </header>
      <div class="mdl-layout__drawer">
        <span class="mdl-layout-title"><a href="/todo/">Suzsnam</span></a>
      </div>
      <main class="mdl-layout__content">
      <div class="page-content">
        <div class="mdl-grid">
          <div class="mdl-cell mdl-cell--4-col">
            <div class="demo-card-square mdl-card mdl-shadow--2dp">
              <div class="mdl-card__title mdl-card--expand">
                <span class="mdl-badge" data-badge="<%= @count %>"><h1 class="mdl-card__title-text">Total Task</h1>
                </span>
              </div>
              <div class="mdl-card__supporting-text">
                Total task counts of todos
              </div>
              <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="/todo/new">
                  Add New Todo List
                </a>
              </div>
            </div>
          </div>
          <div class="mdl-cell mdl-cell--6-col">
            <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp">
              <thead>
                <tr>
                  <th class="mdl-data-table__cell--non-numeric">Name</th>
                  <th>Date Created</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% @todos.each do |todo| %>
                  <td class="mdl-data-table__cell--non-numeric"><%= todo.name %></td>
                  <td><%= todo.created_at %></td>
                  <td>
                    <a href="/todo/<%= todo.id %>">
                      <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored view">
                      view
                      </button>
                    </a>
                  </td>
                  <td>
                    <a href="/todo/<%= todo.id %>/edit">
                      <button type="button" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored edit">
                      Edit
                      </button>
                    </a>
                  </td>
                  <form action="/todo/<%= todo.id %>" method="post">
                    <td>
                      <input type="hidden" name="_method" value="delete" />
                      <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--accent delete">
                      delete
                      </button>
                    </td>
                  </form>
                </tr>
                <%end%>
              </tbody>
            </table>
          </div>
          </main>
          <footer class="mdl-mini-footer">
            <div class="mdl-mini-footer__left-section">
              <div class="mdl-logo"> Â© 2016 Copyright </div>
              <ul class="mdl-mini-footer__link-list">
                <li><a href="#">Designed by Pesuz</a></li>
              </ul>
            </div>
          </footer>
        </div>
      </body>
    </html>